---
import { Image } from 'astro:assets'
import SicherImage from '../assets/sicher_black_bg.svg'
---

<iframe class="wiki-article" src="https://wiki.munichmakerlab.de/wiki/Special:Random" frameborder="0"></iframe>
<div class="mvv-departure-monitor" monitor-configuration=""></div>
<Image
    src={SicherImage}
    alt="Das system ist kaputt :("
    class="sicher-image"
/>
<script type="text/javascript" src="https://www.mvv-muenchen.de/typo3conf/ext/sn_mvv_efa/Resources/Public/mvv-monitor/mvv-monitor.min.js"></script>
<script>
    window.setTimeout(() => {
        location.reload();
    }, 30000)
</script>
<style>
    :root {
        background-color: #222;
    }
    .mvv-departure-monitor {
        width: calc(50vw - 1rem);
        position: absolute;
        right: 1rem;
        top: 1rem;
        .mvv-monitor-header img {
            position: relative;
            background: none;
            float: right;
        }
    }
    .wiki-article {
        width: calc(50vw - 1rem);
        height: 100vw;
        position: absolute;
        left: 1rem;
        top: 1rem;
    }
    .sicher-image {
        position: absolute;
        bottom: 0px;
        right: 0px;
    }
</style>