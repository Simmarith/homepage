---
import Layout from '../layouts/Layout.astro'
import { Image } from 'astro:assets'
import AvatarHead from '../assets/avatar_head.png'
import ProSieben from '../assets/ProSieben.jpeg'
import VoltStorage from '../assets/Voltstorage.jpeg'
import IntraFind from '../assets/intrafind.jpeg'
import Interhyp from '../assets/interhyp.jpeg'
import Linkedin from '../assets/linkedin.png'
import Email from '../assets/email.png'
---

<Layout title='CV'>
  <div class='background'>&nbsp;</div>
  <main>
    <div class='left-col'>
      <Image
        class='avatar-head'
        src={AvatarHead}
        alt='An Illustration of Adrian'
        width={300}
      />
      <div class='general-info'>
        <div class='info'>
          <span class='label'>Name:</span>
          <span class='value'>Adrian Menzel</span>
        </div>
        <div class='info'>
          <span class='label'>Age:</span>
          <span class='value'>28</span>
        </div>
        <div class='info'>
          <span class='label'>Gender:</span>
          <span class='value'>Male</span>
        </div>
      </div>
      <div class='contacts'>
        <a href='https://www.linkedin.com/in/adrian-menzel-844182165/'>
          <Image src={Linkedin} alt='Linkedin Logo' height={50} />
        </a>
        <a href='mailto:menzeladrian@googlemail.com'>
          <Image src={Email} alt='Email Logo' height={50} />
        </a>
      </div>
    </div>
    <div class='content'>
      <h1>Hi! I'm Adrian.</h1>
      <p>
        This is my CV. You'll be able to find most of the relevant info about me
        here.
      </p>

      <div class='workplaces'>
        <h3>The Places I've worked at:</h3>
        <div class='workplace'>
          <Image
            class='logo'
            src={ProSieben}
            alt='Logo of ProSiebenSat.1 Media SE'
          />
          <div class='info'>
            <span class='title'>DevOps Engineer</span>
            <span class='company-name'>ProSiebenSat.1 Media SE</span>
            <span class='time'>Oct 2019 - Present</span>
          </div>
        </div>
        <div class='workplace'>
          <Image class='logo' src={VoltStorage} alt='Logo of VoltStorage' />
          <div class='info'>
            <span class='title'>Fullstack Web Developer</span>
            <span class='company-name'>VoltStorage</span>
            <span class='time'>Jan 2018 - Oct 2019</span>
          </div>
        </div>
        <div class='workplace'>
          <Image class='logo' src={IntraFind} alt='Logo of IntraFind' />
          <div class='info'>
            <span class='title'>Junior Software Developer</span>
            <span class='company-name'>IntraFind Software AG</span>
            <span class='time'>Jul 2017 - Jan 2018</span>
          </div>
        </div>
        <div class='workplace'>
          <Image class='logo' src={Interhyp} alt='Logo of Interhyp' />
          <div class='info'>
            <span class='title'
              >Auszubildender Fachinformatiker Anwendungsentwicklung</span
            >
            <span class='company-name'>Interhyp Gruppe</span>
            <span class='time'>Sep 2014 - Jun 2017</span>
          </div>
        </div>
      </div>
    </div>
    <div class='word-cloud'>
      <h3>The things I know:</h3>
      <canvas id='word_cloud' class='word_cloud' width='600' height='600'
      ></canvas>
    </div>
  </main>
</Layout>

<script>
  import WordCloud from '../assets/WordCloud'

  var db = [
    { word: 'node', freq: 70 },
    { word: 'Terraform', freq: 50 },
    { word: 'vue', freq: 38 },
    { word: 'kubernetes', freq: 38 },
    { word: 'docker', freq: 38 },
    { word: 'Infrastructure Architecting', freq: 40 },
    { word: 'Frontend', freq: 30 },
    { word: 'JavaScript', freq: 70 },
    { word: 'Bash', freq: 50 },
    { word: 'Linux', freq: 70 },
    { word: 'NixOS', freq: 30 },
    { word: 'Ansible', freq: 30 },
    { word: 'Microcontroller', freq: 15 },
    { word: 'C++', freq: 20 },
    { word: 'AWS', freq: 70 },
    { word: 'HTML', freq: 30 },
    { word: 'CSS', freq: 30 },
    { word: 'Backend', freq: 30 },
    { word: 'LESS', freq: 30 },
    { word: 'MongoDB', freq: 30 },
    { word: 'SQL', freq: 30 },
    { word: 'Postgres', freq: 30 },
    { word: 'Git', freq: 30 },
    { word: 'Unity', freq: 30 },
    { word: 'DevOps', freq: 30 },
    { word: 'Godot', freq: 30 },
    { word: 'Networking', freq: 40 },
    { word: 'Unify', freq: 40 },
    { word: 'Client Management', freq: 50 },
    { word: 'Entra ID', freq: 30 },
    { word: 'CI/CD', freq: 20 },
  ]

  const list = []
  for (var i in db) {
    list.push([db[i]['word'], db[i]['freq']])
  }

  WordCloud.minFontSize = 15
  WordCloud(document.getElementById('word_cloud'), { list: list })
</script>

<style lang='less'>
  :root {
    --black: #131416;
    --black2: #212428;

    --grey1: #2f3337;
    --grey2: #555e67;
    --grey3: #7b8fa2;

    --white: #dde8f2;

    --green: #256d4d;
    background: var(--black);

    color: var(--white);
  }

  .background {
    position: absolute;
    background: linear-gradient(var(--black2), var(--black));
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow-x: hidden;
  }

  .background::before {
    overflow-x: hidden;
    content: "";
    position: absolute;
    top: -50px;
    bottom: 0;
    left: -50px;
    right: 0;
    z-index: 1;
    background-image: url('background_square.png');
    opacity: 0.1;
    animation: scroll 5s linear 0s infinite;
    -webkit-animation: scroll 5s linear 0s infinite;
  }

@keyframes scroll {
  0% {
    transform: translate(0, 0);
  }
  100% {
    transform: translate(50px, 50px);
  }
}

@-webkit-keyframes scroll {
  0% {
    transform: translate(0, 0);
  }
  100% {
    transform: translate(50px, 50px);
  }
}

  main {
    display: flex;
    flex-wrap: wrap;
  }

  .avatar-head {
    max-width: 60vw;
    aspect-ratio: 1/1;
    
    border-radius: 50%;
    background-color: var(--green);
    margin: 2rem 5rem;

    &:hover {
      transform: scale(1.5);
      transition: all 20s ease-in;
    }
  }

  .general-info {
    display: flex;
    flex-direction: column;
    align-items: stretch;

    .info {
      display: flex;
      justify-content: space-between;
      margin: 1rem 3rem 0 3rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--grey1);

      .title {
        font-weight: bold;
      }
    }
  }

  .contacts {
    display: flex;
    justify-content: space-around;
    margin: 1rem 3rem;
  }

  .content {
    flex-basis: 35%;
  }

  .workplaces {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    .workplace {
      display: flex;

      .logo {
        border-radius: 1rem;
      }

      .info {
        display: flex;
        flex-direction: column;
        margin: 1rem 2rem;

        .title {
          font-weight: bold;
          font-size: 1.3rem;
        }
      }
    }
  }

  .word-cloud {
    max-width: 100vw;
    flex-basis: 20%;

    h3 {
      margin-left: 1rem;
      transform: translateY(8rem);
    }
    
    #word_cloud {
      max-width: 100vw;
      margin-top: 5rem;
    }
  }

  @media only screen and (max-width: 900px) {
    main {
      justify-content: center;
    }
  }
</style>
